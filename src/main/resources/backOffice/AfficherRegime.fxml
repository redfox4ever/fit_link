<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="1366.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.backOffice.AfficherRegime"
            stylesheets="@../Style1.css">
    <!-- Sidebar -->
    <VBox layoutX="0.0" layoutY="0.0" prefWidth="250.0" prefHeight="700.0" style="-fx-background-color: #2C2C2F;">
        <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #2C2C2F;">
                <children>
                    <ImageView fx:id="dashboardIcon" fitHeight="30.0" fitWidth="30.0" preserveRatio="true" pickOnBounds="true" />
                    <Label fx:id="dashboardText" text="FitLink" textFill="WHITE"
                           style="-fx-font-size: 18px; -fx-font-family: 'Montserrat ExtraBold';-fx-background-color: #2C2C2F" />
                </children>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </HBox>
            <!-- Menu Buttons -->
            <VBox spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <children>
                    <Button fx:id="utilisateurs" text="Utilisateurs" mnemonicParsing="false"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                    <Button fx:id="regimes" text="Regimes" mnemonicParsing="false" onAction="#regimes"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                    <Button fx:id="exercices" text="Exercices" mnemonicParsing="false" onAction="#addExercice"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                </children>
            </VBox>
            <!-- Spacer -->
            <Pane VBox.vgrow="ALWAYS" />
            <!-- Logout -->
            <HBox alignment="CENTER_LEFT" prefHeight="50" style="-fx-background-color: #2C2C2F;">
                <children>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true" pickOnBounds="true" />
                    <Label text="Logout" textFill="WHITE" style="-fx-font-size: 16px;" />
                </children>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </HBox>
        </children>
    </VBox>

    <!-- Main Content Area -->
    <Pane fx:id="content_area" layoutX="260.0" layoutY="78.0" prefHeight="602.0" prefWidth="1084.0"
          style="-fx-background-color: black;">
        <children>
            <ListView fx:id="listRegimes" layoutX="20.0" layoutY="20.0" prefHeight="446.0" prefWidth="1044.0" style="-fx-background-color: #2C2C2F; -fx-control-inner-background: #2C2C2F; -fx-text-fill: white;"  />
            <HBox layoutX="20.0" layoutY="480.0" spacing="20"  style="-fx-background-color: black; -fx-text-fill: white; ">
                <children>
                    <Button fx:id="show" mnemonicParsing="false" text="Ajouter" onAction="#addRegime"
                            style="-fx-background-color: #32974A; -fx-text-fill: white; -fx-border-radius: 12; -fx-padding: 10; -fx-font-size: 16px;" />
                    <Button fx:id="update" mnemonicParsing="false" text="Modifier" onAction="#updateRegime"
                            style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-border-radius: 12; -fx-padding: 10; -fx-font-size: 16px;" />
                    <Button fx:id="delete" mnemonicParsing="false" text="Supprimer" onAction="#deleteRegime"
                            style="-fx-background-color: RED; -fx-text-fill: white; -fx-border-radius: 12; -fx-padding: 10; -fx-font-size: 16px;" />
                </children>
            </HBox>

        </children>
    </Pane>
</AnchorPane>
