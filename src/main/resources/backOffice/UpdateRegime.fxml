<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: black;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="gui.backOffice.UpdateRegime">
    <HBox>
        <!-- Sidebar -->
        <VBox layoutX="0.0" layoutY="0.0" prefWidth="250.0" prefHeight="700.0" style="-fx-background-color: #2C2C2F;">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #2C2C2F;">
                    <children>
                        <ImageView fx:id="dashboardIcon" fitHeight="30.0" fitWidth="30.0" preserveRatio="true" pickOnBounds="true" />
                        <Label fx:id="dashboardText" text="FitLink" textFill="WHITE"
                               style="-fx-font-size: 18px; -fx-font-family: 'Montserrat ExtraBold'; -fx-background-color: #2C2C2F;" />
                    </children>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>
                <!-- Menu Buttons -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <children>
                        <Button fx:id="utilisateurs" text="Utilisateurs" mnemonicParsing="false"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                        <Button fx:id="regimes" text="Regimes" mnemonicParsing="false" onAction="#goToRegimes"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                        <Button fx:id="exercices" text="Exercices" mnemonicParsing="false"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
                    </children>
                </VBox>
                <!-- Spacer -->
                <Pane VBox.vgrow="ALWAYS" />
                <!-- Logout -->
                <HBox alignment="CENTER_LEFT" prefHeight="50" style="-fx-background-color: #2C2C2F;">
                    <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true" pickOnBounds="true" />
                        <Label text="Logout" textFill="WHITE" style="-fx-font-size: 16px;" />
                    </children>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>
            </children>
        </VBox>

        <!-- Main Content -->
        <VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="15"
              style="-fx-background-color: #2C2C2F; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Créer un Régime" />

            <TextField fx:id="nomField" prefWidth="350.0" promptText="Nom du régime"
                       style="-fx-background-color: #343439; -fx-text-fill: white; -fx-border-color: #404043; -fx-border-radius: 5; -fx-background-radius: 5;" />
            <TextField fx:id="descriptionField" promptText="Description"
                       style="-fx-background-color: #343439; -fx-text-fill: white; -fx-border-color: #404043; -fx-border-radius: 5; -fx-background-radius: 5;" />
            <TextField fx:id="typeField" promptText="Type de régime"
                       style="-fx-background-color: #343439; -fx-text-fill: white; -fx-border-color: #404043; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <ComboBox fx:id="coachComboBox" promptText="Sélectionner un coach"
                      style="-fx-background-color: #343439; -fx-text-fill: white; -fx-border-color: #404043; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <Button fx:id="ajouterButton" onAction="#mettreAJourRegime"
                    style="-fx-background-color: #32974A; -fx-text-fill: white; -fx-border-radius: 12; -fx-padding: 10; -fx-font-size: 16px;"
                    text="Ajouter" />
        </VBox>
    </HBox>
</AnchorPane>
